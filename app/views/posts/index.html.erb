<h1>Post Index</h1>
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Public</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody class='table table-striped'>
      <% @posts.each do |post| %>
        <tr>
          <td class="col=md-4"><%= post.title %></td>
          <td class="col=md-6"><%= truncate(post.content, length: 100) %></td>
          <td class="col=md-1"><%= post.published %></td>
          <td class="col=md-1"><%= link_to 'View', post %></td>
          <td class="col=md-1"><%= link_to 'Edit', edit_post_path(post) %></td>
          <td class="col=md-1"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="actions">
    <a href="/posts/new">
      <button type="button" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;New Post
      </button>
    </a>
  </div>
